.banner
  width 100%
  height 379px
  background-image url('../../img/home/main-banner.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  &__description
    width 395px
    height 112px
    box-sizing border-box
    padding 31px 0px 0px 30px
    position absolute
    top 400px
    margin-left 15px
    background-color rgba(237,184,30, 0.8)
    text-transform uppercase
    &--category
      color #666666
      font-weight bold
      margin-bottom 7px
      font-size .9em
    &--header
      color white
      font-size 1.8em
      font-weight bold
      margin-bottom 7px

  @media (max-width desktop)
    &__description
      width 100%
      height 70px
      margin-left 0px
      padding 15px 0px 0px 30px
      top 386px
      &--category
        color #666666
        font-size .9em
      &--header
        color #261c25
        font-size 1.2em
  @media (max-width mobile)
    background-size contain
    max-height 138px
    &__description
      display none
