.main
  max-width desktop
  padding-top 25px
  margin 0 auto

// Main banner Home
.banner
  width 100%
  height 379px
  background-image url('../../img/home/main-banner.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  &__description
    width 395px
    height 112px
    box-sizing border-box
    padding 31px 0px 0px 30px
    position absolute
    top 400px
    margin-left 15px
    background-color rgba(237,184,30, 0.9)
    text-transform uppercase
    &--category
      color #666666
      font-weight bold
      margin-bottom 7px
      font-size .9em
    &--header
      color white
      font-size 1.8em
      font-weight bold
      margin-bottom 7px

  @media (max-width desktop)
    &__description
      width 100%
      height 70px
      margin-left 0px
      padding 15px 0px 0px 30px
      top 386px
      &--category
        color #666666
        font-size .9em
      &--header
        color #261c25
        font-size 1.2em
  @media (max-width mobile)
    background-size contain
    max-height 138px
    &__description
      position relative
      top 130px
      background-color white

// Main list of products
.products__container
  display flex
  flex-flow row wrap
  box-sizing border-box
  padding 10px
.products
  &__pagination
    width 100%
    height 52px
    box-sizing border-box
    background #eeeeee
    padding 20px
    margin-bottom 25px
    @media (max-width 550px)
      .hide
        display none
    @media (max-width mobile)
      margin-top 50px
  &__results
    float left
  &__filter
    float right
    label
      margin-left 10px
  &__list
    min-height 310px
    margin-bottom 25px
    flex: 1 0 200px
    &--border
      width 90%
      height 1px
      margin 0 auto
      border-bottom 1px #eeeeee solid
    &--image
      display block
      margin 0 auto
      margin-bottom 20px
      @media (max-width 700px)
        min-width 100%
    &--description, &--price
      font-size 1.2em
      font-weight bold
      margin-bottom 10px
      padding-left 15px
      span
        font-weight normal
        position relative
        top -5px
        font-size .6em
        margin-right 10px
    @media (max-width desktop)
      flex 1 0 35%
      min-height 200px
      margin-bottom 10px
      &--image
        width 200px
        float left
      &--description, &--price
        margin-top 30px
        font-size 1.4em
        margin-bottom 30px
    @media (max-width mobile)
      flex 1 0 100%
      &--image
        min-width 100px
