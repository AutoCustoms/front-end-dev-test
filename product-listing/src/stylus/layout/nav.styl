.mainHeader
  display flex
  justify-content space-between
  margin-bottom 12px
  box-sizing border-box
  padding 0px 12px 0px 12px
  &__search
    width 340px
    height 30px
    border 0
    background-color #eeeeee
    box-sizing border-box
    padding 10px
    @media (max-width desktop)
      display none
    &:focus
      outline none
  &__contact
    text-decoration none
    text-align left
    li
      float left
      margin-left 10px
    span
      font-weight bold
      font-size 1.3em
    p
      font-size .8em
      font-weight normal
    .fa-phone
      color black
      transform: scale(-1, 1)
      font-size 1.5em
      margin-right 5px
      margin-top 3px
    .fa-shopping-cart
      font-size 1.5em
    @media (max-width desktop)
      display none
  &__logo
    max-height 43px
    @media (max-width desktop)
      max-height 40px
      margin 0 auto




.nav
  width 100%
  height 54px
  margin-bottom 12px
  background-color darkGray
  &__main li
    color #cccccc
    float left
    margin-left 35px
    padding 12px
    font-weight bold
    font-size .9em
    &:hover
      color white
      cursor pointer
    span
      display block
  // do not apply the style where the text needs extra space
  &__main li:not(.nav__main--extra)
    padding-top 20px

  @media (max-width desktop)
    display none
