.main
  max-width desktop
  padding-top 25px
  margin 0 auto

.mainHeader
  display flex
  justify-content space-between
  margin-bottom 12px
  box-sizing border-box
  padding 0px 12px 0px 12px
  &__search
    width 340px
    height 30px
    border 0
    background-color #eeeeee
    box-sizing border-box
    padding 10px
    @media (max-width desktop)
      display none
    &:focus
      outline none
  &__phone
    text-decoration none
    @media (max-width desktop)
      display none
  &__logo
    max-height 43px
    @media (max-width desktop)
      max-height 40px
      margin 0 auto


.nav
  width 100%
  height 54px
  margin-bottom 12px
  background-color darkGray
  &__main li
    color #cccccc
    float left
    margin-left 35px
    padding 12px
    font-weight bold
    font-size .9em
    span
      display block
  // do not apply the style where the text needs extra space
  &__main li:not(.nav__main--extra)
    padding-top 20px

  @media (max-width desktop)
    display none
